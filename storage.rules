rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Gallery images - allow authenticated users to upload, everyone to read
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Event images - allow authenticated users to upload, everyone to read
    match /events/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Faculty images - allow authenticated users to upload, everyone to read
    match /faculty/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Disclosure documents - allow authenticated users to upload, everyone to read
    match /disclosures/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 20 * 1024 * 1024;  // Max 20MB for PDFs
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
